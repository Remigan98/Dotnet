@page "/learn-blazor/demo-product"

<h2 class="text-primary">Demo Product</h2>
<div class="p-2 mt-2">
    <div class="row">
        @foreach (Product product in products)
        {
            <div class="bg-light border col-6">
                <h4 class="text-secondary">Product - @product.Id</h4>
                Name - @product.Name
                Properties:
                <input type="checkbox" @bind="@product.IsActive" />
                <br />
                <br />

                @if (product.IsActive)
                {
                    @foreach(ProductProp prop in product.Properties)
                    {
                        <p>@prop.Key = @prop.Value</p>
                    }
                }

                <br />
                <input type="button" class="btn btn-danger" style="width:100px" value="Delete" @onclick="() => RemoveProduct(product.Id)"/>
                <br />
                <br />
            </div>
        }
    </div>
    <br />
    <div class="row pt-4">
        <input type="button" class="btn btn-success" style="width:100px" value="Counter" @onclick="() => IncrementCount(1)" />
        <br />
        Count : @Count <br />
    </div>
</div>

@code 
{
    public int Count { get; set; } = 0;

    private string selectedProp = "";

    Product product = new Product
    {
        Id = 1,
        Name = "Sample Product 1",
        Price = 5,
        IsActive = true,
        Properties = new List<ProductProp>()
        {
            new ProductProp { Id = 1, Key = "Color", Value = "Red" },
            new ProductProp { Id = 2, Key = "Size", Value = "Medium" },
            new ProductProp { Id = 3, Key = "Weight", Value = "1kg" }
        }
    };

    List<Product> products = new();

    protected override void OnInitialized()
    {
        products.Add(new()
        {
            Id = 1,
            Name = "Midnight Blaze",
            Price = 9.99,
            IsActive = false,
            Properties = new List<ProductProp>
                {
                    new ProductProp { Id = 1, Key = "Flavor", Value = "Rose"},
                    new ProductProp { Id = 2, Key = "Size", Value = "20oz"},
                    new ProductProp { Id = 3, Key = "Color", Value="Purple" }
                }
        });

        products.Add(new()
        {
            Id = 2,
            Name = "Blossom Lily",
            IsActive = true,
            Price = 12.49,
            Properties = new List<ProductProp>
            {
                new ProductProp { Id = 1, Key = "Flavor", Value = "Lily" },
                new ProductProp { Id = 2, Key = "Size", Value = "18oz" },
                new ProductProp {Id = 3,Key = "Color",Value = "White"}
            }
        });
    }

    void IncrementCount(int incrementValue)
    {
        Count += incrementValue;
    }

    void RemoveProduct(int productId)
    {
        Product? product = products.FirstOrDefault(p => p.Id == productId);

        if (product is not null)
        {
            products.Remove(product);
        }
    }
}
