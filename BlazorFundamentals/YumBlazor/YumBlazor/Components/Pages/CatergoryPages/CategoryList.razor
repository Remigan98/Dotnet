@page "/categories"

@inject ICategoryRepository categoryRepository;
@inject IJSRuntime jsRuntime;

<BSModal 
    OnModalConfirm="ConfirmDeleteCategory"
    Title="Are you sure you want to delete this category?"
    Body="This action cannot be undone."
    ButtonText="Delete"
    ButtonBootstrapStyle="btn-danger">
</BSModal>

@if (isProcessing)
{
    <div class="position-absolute w-75 h-75 d-flex flex-column align-items-center bg-white justify-content-center">
        <img src="/images/loading.gif" alt="loading" />
    </div>
}
else
{
    <div class="card shadow border-0 m-4">
        <div class="card-header bg-black bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Category List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <a href="categories/create" class="btn btn-lg btn-secondary" style="width:250px;">
                        <i class="bi bi-plus-square" style="margin-right:5px;"></i>Add new category
                    </a>
                </div>
            </div>
            @if (categories.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th style="width:70%;">Name</th>
                            <th style="width:20%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in categories)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>
                                    <a href="@($"categories/update/{category.Id}")" class="btn btn-sm btn-primary me-2">
                                        <i class="bi bi-pencil-square" style="margin-right:5px;"></i>Edit
                                    </a>
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteCategory(category.Id)">
                                        <i class="bi bi-trash" style="margin-right:5px;"></i>Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
}

@code 
{
    bool isProcessing { get; set; } = true;
    IEnumerable<Category> categories { get; set; } = new List<Category>();
    int deletedCategoryId { get; set; } = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadCategories();

            isProcessing = false;
            StateHasChanged();
        }
    }

    async Task LoadCategories()
    {
        categories = await this.categoryRepository.GetAllAsync();
    }

    void DeleteCategory(int id)
    {
        deletedCategoryId = id;
        jsRuntime.InvokeVoidAsync("ShowConfirmationModal");
    }

    async Task ConfirmDeleteCategory(bool isConfirmed)
    {
        if (isConfirmed && deletedCategoryId != 0)
        {
            isProcessing = true;
            StateHasChanged();

            bool success = await categoryRepository.DeleteAsync(deletedCategoryId);
            await LoadCategories();

            isProcessing = false;
            deletedCategoryId = 0;

            StateHasChanged();

            if (success)
            {
                await jsRuntime.ToastrSuccess("Category deleted successfully.");
            }
            else
            {
                await jsRuntime.ToastrError($"Category with {deletedCategoryId} not found.");
            }

            await jsRuntime.InvokeVoidAsync("HideConfirmationModal");
        }
    }
}
