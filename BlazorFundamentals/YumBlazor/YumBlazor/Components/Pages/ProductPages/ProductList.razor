@page "/products"

@using System.Globalization;

@inject IProductRepository productRepository;
@inject IJSRuntime jsRuntime;

<BSModal 
    OnModalConfirm="ConfirmDeleteProduct"
    Title="Are you sure you want to delete this product?"
    Body="This action cannot be undone."
    ButtonText="Delete"
    ButtonBootstrapStyle="btn-danger">
</BSModal>

@if (isProcessing)
{
    <div class="position-absolute w-75 h-75 d-flex flex-column align-items-center bg-white justify-content-center">
        <img src="/images/loading.gif" alt="loading" />
    </div>
}
else
{
    <div class="card shadow border-0 m-4">
        <div class="card-header bg-black bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Product List</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-12 text-end">
                    <a href="products/create" class="btn btn-lg btn-secondary" style="width:250px;">
                        <i class="bi bi-plus-square" style="margin-right:5px;"></i>Add new product
                    </a>
                </div>
            </div>
            @if (products.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th style="width:10%;">Name</th>
                            <th style="width:10%;">Price</th>
                            <th style="width:10%;">Tag</th>
                            <th style="width:10%;">Category</th>
                            <th style="width:40%;">Description</th>
                            <th style="width:20%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Product product in products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Price.ToString("C", CultureInfo.GetCultureInfo("en-us"))</td>
                                <td><span class="badge text-bg-info">@product.Tag</span></td>
                                <td>@product.Category.Name</td>
                                <td>@product.Description</td>
                                <td>
                                    <a href="@($"products/update/{product.Id}")" class="btn btn-sm btn-primary me-2">
                                        <i class="bi bi-pencil-square" style="margin-right:5px;"></i>Edit
                                    </a>
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteProduct(product.Id)">
                                        <i class="bi bi-trash" style="margin-right:5px;"></i>Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
}

@code 
{
    bool isProcessing { get; set; } = true;
    IEnumerable<Product> products { get; set; } = new List<Product>();
    int deletedProductId { get; set; } = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadProducts();

            isProcessing = false;
            StateHasChanged();
        }
    }

    async Task LoadProducts()
    {
        products = await this.productRepository.GetAllAsync();
    }

    void DeleteProduct(int id)
    {
        deletedProductId = id;
        jsRuntime.InvokeVoidAsync("ShowConfirmationModal");
    }

    async Task ConfirmDeleteProduct(bool isConfirmed)
    {
        if (isConfirmed && deletedProductId != 0)
        {
            isProcessing = true;
            StateHasChanged();

            bool success = await productRepository.DeleteAsync(deletedProductId);
            await LoadProducts();

            isProcessing = false;
            deletedProductId = 0;

            StateHasChanged();

            if (success)
            {
                await jsRuntime.ToastrSuccess("Product deleted successfully.");
            }
            else
            {
                await jsRuntime.ToastrError($"Product with {deletedProductId} not found.");
            }

            await jsRuntime.InvokeVoidAsync("HideConfirmationModal");
        }
    }
}
