                            <Template Context="orderHeader">
                                <RadzenButton Shade="Shade.Lighter" Text="Details" ButtonStyle="ButtonStyle.Info" 
                                Click="@(() => _navigationManager.NavigateTo($"order/details/{orderHeader.Id}"))"/>
                            </Template>
                        </RadzenDataGridColumn>
